extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-light-blue
            h2 Editar informação do aluno
        .w3-container
            h4
                b Número: 
                | #{aluno._id}
            h4
                b Nome: 
                | #{aluno.nome}  

        form.w3-container(method="POST")
                    fieldset
                        legend Metadata
                        label Id
                        input.w3-input.w3-round(type="text" name="id" readonly value=aluno._id)
                        label Nome
                        input.w3-input.w3-round(type="text" name="nome" value=aluno.nome)
                        label Git
                        input.w3-input.w3-round(type="text" name="gitlink" value=aluno.gitlink)


                    fieldset
                        legend TPC
                        - for (var num = 1; num <= 8; num++)
                          if aluno['tpc' + num] == 1
                            input.w3-check(type="checkbox" name="tpc" + num value="1" checked)
                            label TPC #{num} 
                          else
                            input.w3-check(type="checkbox" name="tpc" + num value="1")
                            label TPC #{num}  
                        
                    span 
                        button.w3-btn.w3-blue.w3-mb-2(type="submit" class="w3-round w3-margin-top w3-margin-bottom" style="width:100px") Confirmar
                    span            
                        a(href='/alunos' class="w3-button w3-light-blue w3-round w3-margin-top w3-margin-bottom" style="width:100px") Voltar
                    span