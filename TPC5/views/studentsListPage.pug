extends layout

block content
    .w3-card-4
        header.w3-container.w3-light-blue 
            h1
                span Lista de alunos 
                a.w3-btn.w3-round.w3-pale-blue(href="/alunos/registo") + 
        a(href='/' class="w3-button w3-light-blue w3-round w3-margin-top w3-margin-bottom" style="width:100px") Voltar
        w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th GitLink
                    th Actions
    
                each aluno in lalunos
                    tr
                        td= aluno._id
                        td
                            a(href="/alunos/" + aluno._id)= aluno.nome
                        td= aluno.gitlink
                        td 
                            span
                                a(href="/alunos/edit/" + aluno._id class="w3-button w3-green w3-round" style="width:100px") Editar
                        
                            span
                            span 
                                a(href="/alunos/delete/" + aluno._id class="w3-button w3-red w3-round" style="width:100px") Eliminar
         
        a(href='/' class="w3-button w3-light-blue w3-round w3-margin-top w3-margin-bottom" style="width:100px") Voltar
        
