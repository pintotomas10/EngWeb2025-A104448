extends layout

block content
  .w3-card-4
    header.w3-container.w3-light-blue
      h1= filme.title
    .w3-container
      p
        strong Ano: 
        | #{filme.year}
      p
        strong Elenco:
        ul.w3-ul
          each ator in filme.cast
            li: a(href=`/atores/${encodeURIComponent(ator)}`) #{ator}
      p
        strong Géneros:
        ul.w3-ul
          each genero in filme.genres
            li= genero

      // Botão para editar o filme
      a.w3-btn.w3-blue(href=`/filmes/${encodeURIComponent(filme.title)}/edit`) Editar Filme
      a.w3-btn.w3-blue.w3-right(href='/filmes') Voltar
      br
      br
    footer.w3-container.w3-light-blue
      adress Generated by EW2025 class