extends layout 

block content
    .w3-card-4 
        .header.w3-container.w3-light-blue
            h2 Editar Filme
        form.w3-container(method="POST" action=`/filmes/${encodeURIComponent(filme.id)}/edit`)  
            fieldset
                legend Informações do Filme
                label Título
                input.w3-input.w3-round(type="text" name="title" value=filme.id readonly)

                label Ano
                input.w3-input.w3-round(type="number" name="year" value=filme.year)

            fieldset
                legend Elenco
                each ator in filme.cast
                    label
                        input(type="checkbox" name="cast" value=ator checked)
                        |  #{ator}
                        br
                label Novo Ator (separados por vírgula)
                input.w3-input.w3-round(type="text" name="cast" placeholder="Adicionar novos atores")

            fieldset
                legend Géneros
                each genero in filme.genres
                    label
                        input(type="checkbox" name="genres" value=genero checked)
                        |  #{genero}
                        br
                label Novo Gênero (separados por vírgula)
                input.w3-input.w3-round(type="text" name="genres" placeholder="Adicionar novos gêneros")

            br
            button.w3-btn.w3-blue.w3-mb-2(type="submit") Salvar Alterações
            a.w3-btn.w3-blue.w3-mb-2.w3-right(href='/filmes') Voltar
            br
            br
            footer.w3-container.w3-light-blue
