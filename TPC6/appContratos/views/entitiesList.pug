extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-light-blue
            h1 Lista de Entidades

    .w3-container.w3-white
        h6
                    
        .w3-container

            a.w3-button.w3-blue(href="/") Voltar

            table.w3-table-all
                tr
                    th ID 
                    th Nome
                    th Valor Montante
                each entidade in lista 
                    tr 
                        td
                            a(href="/entidades/" + entidade._id)=entidade._id
                        td= entidade.nome 
                        td= entidade.totalMontante 